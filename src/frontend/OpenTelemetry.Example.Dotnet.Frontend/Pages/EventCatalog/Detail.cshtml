@page
@model OpenTelemetry.Example.Dotnet.Frontend.Pages.EventCatalog.Detail
<div class="row mt-5">
    <div class="col-md-4">
        <img src="@Model.Event!.ImageUrl" class="detailImage" alt="Artist pic" />
    </div>
    <div class="col-md-6 ml-1">
        <div class="row">
            <div class="columnHeader">SHOW</div>
        </div>
        <div class="row mt-2 bold">
            <h1>@Model.Event!.Name</h1>
        </div>
        <div class="row mt-2">
            <h3>@Model.Event!.Artist</h3>
        </div>
        <div class="row mt-3 mt-4 bold">
            <h3>@Model.Event!.Date.ToShortDateString()</h3>
        </div>
        <div class="row mt-4">
            @Model.Event!.Description
        </div>
        <div class="row mt-5">
            <h3><span class="bold">$@Model.Event!.Price</span></h3><span class="mt-1">&nbsp;&nbsp;&nbsp; PER TICKET</span>
        </div>
    </div>
</div>
<div class="row mt-5">
    <div class="col">
        <hr />
    </div>
</div>
<div class="row mt-4">
    <div class="col offset-4">
        <form class="form" method="post" asp-page-handler="AddToBasket">
            <div class="row">
                <label class="columnHeader mt-2">QUANTITY:</label>
               
                <select asp-for="@Model.BasketLineForCreation.TicketAmount" class="ml-5 w-25">
                    <option value="1">1</option>
                    <option value="2">2</option>
                    <option value="3">3</option>
                    <option value="4">4</option>
                    <option value="5">5</option>
                </select>
                <input  type="hidden" asp-for="@Model.BasketLineForCreation.EventId" value="@Model.Event.EventId">
                <input  type="hidden" asp-for="@Model.BasketLineForCreation.Price" value="@Model.Event.Price"/> 
                
                <button type="submit" class="btn btn-primary ml-4 w-50">PLACE ORDER</button>
            </div>
        </form>
    </div>
</div>